<link rel="icon" href="img/logo_mascotitas_morado.png">
<link rel="stylesheet" href="css/stylesInicioRegistro.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<title><%=titulo   %></title>

<a href="/">
    <img id="logo" src="../img/logo_mascotitas.png" alt="" height="100px" width="100px">
</a>


<main>
    <div class="contenedor__todo">
        <div class="caja__trasera">
            <div class="caja__trasera-login">
                <h3>¿Ya tienes una cuenta?</h3>
                <p>Inicia sesión para entrar en la página.</p>
                <button id="btn__iniciar-sesion" class="btn">Iniciar sesión</button>
            </div>
            <div class="caja__trasera-register">
                <h3>¿Aún no tienes una cuenta?</h3>
                <p>Regístrate para que puedas iniciar sesión.</p>
                <button id="btn__registrarse" class="btn">Registrarse</button>
            </div>
        </div>
        <!--Formulario de login y registro-->
        <div class="contenedor__login-register">
            <!--Login-->
            <form action="" class="formulario__login">
                <h2>Iniciar sesión</h2>
                <input id="usuario" type="text" placeholder="Nombre de usuario" required>
                <input type="password" id="contrasenaInicio" placeholder="Contraseña" required>
                <button type="button"
                    style="position: absolute; display: inline; margin-top: -43px; margin-left: 270px; background-color: transparent; color: black;"
                    id="btnMostrarContrasenaInicio" onclick="toggleMostrarContrasenaInicio()">
                    <span id="iconoMostrarInicio" class="bi bi-eye-fill"></span>
                    <span id="iconoOcultarInicio" class="bi bi-eye-slash-fill"></span>
                </button>
                <button class="entrar" type="submit" onclick="validarUsuario()" class="btn">Entrar</button>
            </form>
            <!--Registro-->
            <form action="/newPersona" method="POST" class="formulario__register">
                <h2>Registrarse</h2>
                <input type="text" placeholder="Correo electrónico" required name="correoRegistro">
                <input type="text" placeholder="Nombre completo" required id="nombre_completo" name="nombreRegistro">
                <input type="text" placeholder="Documento" required id="documento" name="documentoRegistro">
                <input type="text" placeholder="Telefono" required id="telefono" name="telefonoRegistro">
                <input type="text" placeholder="Usuario" required  name="usuarioRegistro">
                <input type="password" id="contrasenaRegistro" placeholder="Contraseña" required name="contrasenaRegistro">
                <button type="button"
                    style="position: absolute; display: inline; margin-top: -43px; margin-left: 270px; background-color: transparent; color: black;"
                    id="btnMostrarContrasenaRegistro" onclick="toggleMostrarContrasenaRegistro()">
                    <span id="iconoMostrarRegistro" class="bi bi-eye-fill"></span>
                    <span id="iconoOcultarRegistro" class="bi bi-eye-slash-fill"></span>
                </button>
                <input type="password" id="confirmarContrasena" placeholder="Confirmar contraseña" required>
                <button type="button"
                    style="position: absolute; display: inline; margin-top: -43px; margin-left: 270px; background-color: transparent; color: black;"
                    id="btnMostrarConfirmarContrasena" onclick="toggleMostrarConfirmarContrasena()">
                    <span id="iconoMostrarConfirmar" class="bi bi-eye-fill"></span>
                    <span id="iconoOcultarConfirmar" class="bi bi-eye-slash-fill"></span>
                </button>

                <button type="submit" class="registrarse" class="btn">Registrarse</button>
            </form>
        </div>
    </div>
</main>

<script src="js/script.js"></script>
<script src="js/inicio.js"></script>
